<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" type="image/png" href="assets/img/kodnoir.png">
    <title>{% block title %}KOD{% endblock %}</title>
    {% block stylesheets %}{% endblock %}
    <link rel="stylesheet" href="{{ asset('assets/css/style.css') }}">
</head>




{% block content %}
    <header>
        <div class="header-crud">
            <h1>Pack</h1>
        </div>
    </header>


    <div class="show">
    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pack.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ pack.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ pack.description }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ pack.duree }}</td>
            </tr>
            <tr>
                <th>Nb_personnes</th>
                <td>{{ pack.NbPersonnes }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('pack_index') }}" class="button-back">Back to list</a>

    <a href="{{ path('pack_edit', {'id': pack.id}) }}" class="button-update">Update</a>

    {{ include('pack/_delete_form.html.twig') }}
    </div>
{% endblock %}
